.title-banner {
  display: flex;
  justify-content: space-between;
}

.school-title {
  font-size: 36rpx;
  margin: 16rpx 16rpx 16rpx 16rpx;
  padding: 12rpx;
  font-weight: bold;
  width: fit-content;
  border-radius: 5rpx;
  background-color: lightblue;
}

.result-banner {
  display: flex;
  margin: 0 16rpx;
  justify-content: space-between;
  border-bottom: 0.01rem solid lightgray;
}

.result-title {
  font-size: 42rpx;
  margin: 12rpx 0;
  color: gray;
  font-weight: bold;
}

/* .dropdown-item {
  display: inline-block;
  font-size: 24rpx;
} */

.result-type {
  font-size: 28rpx;
  color: gray;
}

.accepted {
  font-size: 36rpx;
  color: green;
  font-weight: bold;
}

.rejected {
  font-size: 37rpx;
  color: red;
  font-weight: bold;
}

.avg-data {
  font-weight: bold;
}

.ec-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 30vh;
  margin-top: 48rpx;
}

ec-canvas {
  margin-top: 16rpx;
  width: 98%;
  height: 98%;
  flex-shrink: 0;
}
