.title-banner {
  display: flex;
  justify-content: space-between;
}

.school-title {
  margin: 10rpx 10rpx;
  padding: 10rpx;
  font-weight: bold;
  width: fit-content;
}

.result-banner {
  display: flex;
  margin: 0 16rpx;
  justify-content: space-between;
  border-bottom: 0.01rem solid lightgray;
}

.result-title {
  font-size: 32rpx;
  margin: 12rpx 6rpx;
  color: gray;
  font-weight: bold;
}

.result-type {
  font-size: 28rpx;
  color: gray;
}

.accepted {
  font-size: 36rpx;
  color: green;
  font-weight: bold;
}

.rejected {
  font-size: 37rpx;
  color: red;
  font-weight: bold;
}

.avg-data {
  font-weight: bold;
}

.ec-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100vw;
  height: 30vh;
  margin-top: 48rpx;
}

ec-canvas {
  margin-top: 16rpx;
  width: 98%;
  height: 98%;
  flex-shrink: 0;
}
